// Conn.java
package QuizProject;

import java.sql.*;

public class Conn {
    Connection c;

    public Conn() {
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            c = DriverManager.getConnection("jdbc:mysql://localhost:3306/quiz_application", "root", "ROOT");
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    public Connection getConnection() {
        return c;
    }
}
